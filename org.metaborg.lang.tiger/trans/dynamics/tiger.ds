module tiger

imports ds-signatures/Tiger-sig

signature
  sorts V 
  constructors
    IntV : IntConst -> V
    
  sort aliases 
    Env = Map(Id, V)
    Heap = Map(Int, V)
  components
    E : Env
    H : Heap
